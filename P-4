//Более утонченный способ решения задачи
func huntedOnWork (dev: (name: String, age: Int, exp: Double, profession: String)) {
    if dev.age > 23 && dev.exp > 0 && dev.profession == "ios" {
        print("Принят на работу.")
    } else {
        print("Вы нам не подходите.")
    }
}
huntedOnWork(dev: ("Artem", 33, 1.0, "ios"))

var developersArray: [(name: String, age: Int, exp: Double, profession: String)] = []
func jundebvelopers (dev: (name: String, age: Int, exp: Double, profession: String)) {
    if dev.age < 23 {
        developersArray.append(dev)
    } else {
        print("Разработчик не подходит по условиям.")
    }
}
jundebvelopers(dev: ("Artem", 33, 1.0, "ios"))
jundebvelopers(dev: (name: "Anton", age: 30, exp: 0.1, profession: "android"))
jundebvelopers(dev: (name: "Ivan", age: 24, exp: 3.0, profession: ""))
jundebvelopers(dev: (name: "Alex", age: 45, exp: 6.0, profession: ""))
jundebvelopers(dev: (name: "Oleg", age: 0, exp: 0, profession: ""))
jundebvelopers(dev: (name: "Serega", age: 0, exp: 0, profession: ""))
jundebvelopers(dev: (name: "Jenya", age: 0, exp: 0, profession: ""))
jundebvelopers(dev: (name: "Max", age: 0, exp: 0, profession: ""))
jundebvelopers(dev: (name: "Andrey", age: 0, exp: 0, profession: ""))
jundebvelopers(dev: (name: "Tom", age: 0, exp: 0, profession: ""))
print(developersArray)
