//Task 1: создать кортеж с 3-5 значениями, вывести в консоль 3 способами
var randomTuple = ("two", 2, 2.0, true)
var (str, int, double, bool) = randomTuple
print(int)
print(randomTuple)
print(randomTuple.2)
print(bool)
//Task 2: создать кортеж с наружениями ПДД с опр параметрами
var dps1 = (speedLimit: 40, drunk: 5, withoutRights: 7)
print(dps1.2)
print(dps1.speedLimit)
print(dps1)

//Task 3: Создать второй кортеж с другими значениями параметров
var dps2 = (speedLimit: 34, drunk: 8, withoutRights: 23)
var resultdps = (speedLimit: dps2.speedLimit - dps1.speedLimit, drunk: dps2.drunk - dps1.drunk, wuthoutRights: dps2.withoutRights - dps1.withoutRights)
print(resultdps)
print(resultdps.2)
print(resultdps.speedLimit)

